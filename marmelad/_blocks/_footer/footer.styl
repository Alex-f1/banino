.footer
  flex: none
  padding-top: 20px
  padding-bottom: 30px
  border-top: 1px solid #E9E9E9

  .logo
    margin-right: 40px

    @media (max-width: 767px)
      margin-right: 0

    &__desc
      display: none

  &__top
    display: flex
    align-items: center
    justify-content: space-between
    margin-bottom: 40px

    @media (max-width: 767px)
      margin-bottom: 30px

  &__middle
    margin-bottom: 50px

    @media (max-width: 767px)
      margin-bottom: 20px

  &__bottom
    display: flex
    align-items: center

    @media (max-width: 767px)
      flex-direction: column

  &__contacts
    display: flex
    align-items: center

  &__button-call
    &.button-default
      background-color: #A49777

    @media (max-width: 767px)
      min-width: 175px

  &__socials
    display: flex
    align-items: center
    margin-left: auto
    margin-right: 85px

    @media (max-width: 767px)
      margin-right: 0
      margin-left: 0
      order: -1

  &__social-link
    flex: 0 0 22px
    width: 22px
    max-width: 22px
    height: 22px
    background-repeat: no-repeat
    background-size: contain
    background-position: 0 0
    margin-right: 10px
    transition: background 0.3s, ease 0.3s

    @media (max-width: 767px)
      flex: 0 0 25px
      width: 25px
      max-width: 25px
      height: 25px
      margin-right: 15px

