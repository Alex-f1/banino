  &__phone
    font-size: 18px
    color: #000
    font-weight: 400
    line-height: 1.1
    text-decoration: none
    margin-right: 25px
    transition: color 0.3s, ease 0.3s

    @media (max-width: 1279px)
      margin-left: 25px

    @media (max-width: 767px)
      display: none

    &:hover
      color: #de8c10

    &--mobile
      display: block !important
      order: -1
      margin-bottom: 20px

      @media (min-width: 768px)
        display: none !important

  &__nav
    border: 1px solid #EEEEEE
    padding-top: 17px
    padding-bottom: 17px

    @media (max-width: 959px)
      border: none
      padding-top: 0
      padding-bottom: 0

    ul
      list-style: none
      display: flex
      align-items: center
      justify-content: center
      padding-left: 0
      margin: 0

      @media (max-width: 959px)
        flex-direction: column

      li
        margin-right: 75px

        @media (max-width: 959px)
          margin-right: 0
          margin-bottom: 15px

        &:last-child
          margin-right: 0

        a
          font-size: 18px
          color: #4F4F4F
          font-weight: 400
          line-height: 1.1
          text-decoration: none
          transition: color 0.3s, ease 0.3s

          &:hover
            color: #de8c10

  &__links
    @media (max-width: 767px)
      text-align: center

    a
      font-size: 18px
      color: #A49777
      font-weight: 400
      line-height: 1.1
      display: block
      text-decoration: none
      transition: color 0.3s, ease 0.3s
      margin-top: 10px

      &:hover
        color: #de8c10

      &:first-child
        margin-top: 0

        @media (max-width: 767px)
          margin-top: 15px