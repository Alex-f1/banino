.catalog-thumb
  text-decoration: none
  display: flex
  width: 100%
  border-radius: 40px
  transition: box-shadow 0.3s, ease 0.3s

  &:hover
    box-shadow: 26px 26px 45px rgba(0, 0, 0, 0.07)

    .button-go-to
      color: #CE7B01

      .svg-icon
        fill: #CE7B01

  &__body
    padding: 20px 15px 50px 15px
    background-color: #FFF
    border-radius: 40px
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    width: 100%
    min-height: 500px

    @media (max-width: 639px)
      min-height: 320px
      padding-bottom: 40px

  &__content
    display: flex
    flex-direction: column
    width: 100%

  &__img
    width: 100%
    height: 250px
    align-self: flex-end
    position: relative

    @media (max-width: 639px)
      height: 180px

    img
      vertical-align: top
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

  &__name
    font-size: 35px
    color: #3D3D3D
    font-weight: 700
    line-height: 1.1

    @media (max-width: 639px)
      font-size: 30px

  &__link
    margin-top: auto