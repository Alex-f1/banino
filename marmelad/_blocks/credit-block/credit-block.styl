.credit-block
  box-shadow: 0px -45px 43px rgba(0, 0, 0, 0.03)
  padding-top: 100px
  padding-bottom: 100px

  @media (max-width: 1023px)
    padding-top: 40px
    padding-bottom: 30px

  &__head
    max-width: 1030px
    width: 100%
    margin-right: auto
    margin-left: auto
    display: flex
    align-items: center
    margin-bottom: 55px

    @media (max-width: 1023px)
      flex-direction: column
      align-items: center

  &__title
    font-size: 52px
    color: #A49777
    font-weight: 700
    line-height: 1.2
    max-width: 650px
    width: 100%

    @media (max-width: 767px)
      font-size: 30px

  &__logo
    flex: 0 0 190px
    width: 190px
    max-width: 190px
    margin-left: auto

    @media (max-width: 1023px)
      order: -1
      margin-right: auto

    img
      vertical-align: top

  &__content
    max-width: 1030px
    width: 100%
    margin-right: auto
    margin-left: auto

  &__terms
    margin-bottom: 90px

    @media (max-width: 767px)
      margin-bottom: 50px

  &__terms-title
    font-size: 28px
    color: #9A9A9A
    font-weight: 800
    line-height: 1.1
    text-transform: uppercase
    margin-bottom: 35px

  &__terms-items
    display: flex
    justify-content: space-between

    @media (max-width: 767px)
      display: block

  &__terms-item
    font-size: 22px
    color: #FFF
    font-weight: 500
    line-height: 1.1
    text-align: center
    padding: 15px 45px 18px 45px
    background-color: #A49777
    box-shadow: 12px 7px 15px rgba(0, 0, 0, 0.07)
    border-radius: 13px
    margin-right: 5px

    @media (max-width: 1279px)
      padding-right: 35px
      padding-left: 35px

    @media (max-width: 767px)
      margin-bottom: 20px
      margin-right: 0
      padding-right: 25px
      padding-left: 25px

    &:last-child
      margin-right: 0
      margin-bottom: 0

  &__lists
    strong
      font-size: 30px
      color: #676767
      font-weight: 800
      line-height: 1.1
      display: block
      margin-bottom: 30px

    ul
      list-style: none
      background-color: #FFF
      box-shadow: inset 5px 7px 16px rgba(0, 0, 0, 0.07)
      border-radius: 33px
      padding: 55px
      margin-bottom: 65px

      @media (max-width: 767px)
        padding: 35px 15px
        margin-bottom: 40px

      li
        font-size: 20px
        color: #939393
        font-weight: 500
        line-height: 1.3
        display: flex
        align-items: baseline
        margin-bottom: 15px

        @media (max-width: 767px)
          font-size: 16px

        &:before
          content: ''
          flex: 0 0 17px
          width: 17px
          max-width: 17px
          height: 14px
          background-image: url("data:image/svg+xml,%3Csvg width='17' height='14' viewBox='0 0 17 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2 6.95L6.03448 11L15 2' stroke='%23A49777' stroke-width='3'/%3E%3C/svg%3E%0A")
          background-repeat: no-repeat
          background-position: 0 0
          margin-right: 10px