.logo
  display: flex
  align-items: center
  margin-right: 40px

  @media (max-width: 1279px)
    margin-right: 20px

  &__link
    flex: 0 0 115px
    width: 115px
    max-width: 115px
    margin-right: 55px

    @media (max-width: 1279px)
      margin-right: 25px

    @media (max-width: 767px)
      flex: 0 0 70px
      width: 70px
      max-width: 70px

    img
      vertical-align: top

  &__desc
    font-size: 19px
    color: #343434
    font-weight: 400
    line-height: 1.2
    max-width: 190px

    @media (max-width: 1023px)
      display: none