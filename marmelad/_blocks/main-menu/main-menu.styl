.main-menu
  padding-top: 15px
  padding-bottom: 15px
  border-top: 1px solid #EEEEEE
  border-bottom: 1px solid #EEEEEE

  @media (max-width: 959px)
    padding-top: 40px
    border: none
    box-shadow: 0px 12px 9px rgba(0, 0, 0, 0.08)
    border-radius: 0px 0px 15px 15px
    padding-bottom: 25px
    display: none

  &__nav
    ul
      list-style: none
      display: flex
      align-items: center
      justify-content: center
      padding-left: 0
      margin: 0

      @media (max-width: 959px)
        display: block
        padding-left: 55px

      li
        margin-right: 75px

        @media (max-width: 959px)
          margin-right: 0
          margin-bottom: 15px

        &:last-child
          margin-right: 0

        a
          font-size: 18px
          color: #4F4F4F
          font-weight: 400
          line-height: 1.1
          text-decoration: none
          transition: color 0.3s, ease 0.3s

          &:hover
            color: #de8c10