.our-advantages
  padding-top: 50px
  padding-bottom: 50px

  &__inner
    @media (max-width: 959px)
      padding-left: 0

  &__head
    margin-bottom: 60px

    @media (max-width: 959px)
      padding-left: 15px

    @media (max-width: 767px)
      margin-bottom: 15px

  &__title
    font-size: 44px
    color: #CDCDCD
    font-weight: 700
    line-height: 1.1

    @media (max-width: 767px)
      font-size: 30px

  &__items
    display: flex
    margin-left: -50px

    @media (min-width: 960px)
      flex-wrap: wrap
      justify-content: center

    @media (max-width: 959px)
      overflow-y: auto
      padding-top: 25px
      margin-left: 0
      padding-left: 15px

  &__item
    width: 20%
    margin-bottom: 40px
    padding-left: 50px

    @media (max-width: 959px)
      flex: 0 0 130px
      width: 130px
      max-width: 130px
      padding-left: 0
      margin-right: 20px
      margin-bottom: 0

  &__body
    display: flex
    flex-direction: column
    align-items: center
    text-align: center

  &__icon
    width: 151px
    height: 151px
    background-color: #FFFFFF
    box-shadow: -10px -10px 16px #FFFFFF, 2px 7px 10px rgba(231, 231, 231, 0.88)
    border-radius: 38px
    position: relative
    margin-bottom: 25px

    @media (max-width: 959px)
      width: 130px
      height: 130px

    img
      vertical-align: top
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

  &__name
    font-size: 18px
    color: #4D4D4D
    font-weight: 800
    line-height: 1.3
    text-align: center

    @media (max-width: 959px)
      font-size: 15px