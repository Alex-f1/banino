.our-works
  max-width: 1920px
  width: 100%
  margin-left: auto
  margin-right: auto
  margin-bottom: 195px
  padding-top: 60px
  padding-bottom: 100px
  background: linear-gradient(360deg, #FFFFFF 37.34%, rgba(255, 255, 255, 0) 66.97%), #F5F5F5
  box-shadow: 0px 4px 151px rgba(0, 0, 0, 0.1)

  @media (max-width: 1279px)
    padding-top: 30px
    padding-bottom: 60px
    margin-bottom: 70px

  &__head
    display: flex
    align-items: center
    margin-bottom: 60px

    @media (max-width: 767px)
      margin-bottom: 30px

    &:after
      content: ''
      flex: 1 1 auto
      height: 1px
      background-color: #A49777
      margin-top: 10px
      margin-left: 35px

      @media (max-width: 1279px)
        display: none

  &__title
    font-size: 44px
    color: #CDCDCD
    font-weight: 700
    line-height: 1.1

    @media (max-width: 767px)
      font-size: 30px

  &__container
    padding-bottom: 70px

    @media (max-width: 1279px)
      padding-left: 13px
      padding-bottom: 0

    &:after
      content: ''
      position: absolute
      bottom: 0
      left: 50%
      transform: translateX(-50%)
      width: 1170px
      height: 1px
      background-color: #C4C4C4

      @media (max-width: 1279px)
        display: none

  &__item
    width: 380px
    margin-bottom: 20px

    @media (max-width: 767px)
      width: 215px

  &__img
    img
      vertical-align: top

  &__content
    margin-top: 25px

    @media (max-width: 767px)
      margin-top: 15px

  &__name
    font-size: 22px
    color: #000
    font-weight: 500
    line-height: 1.1
    margin-bottom: 10px

    @media (max-width: 767px)
      font-size: 17px

  &__date
    font-size: 18px
    color: #C1C1C1
    font-weight: 500
    line-height: 1.1
