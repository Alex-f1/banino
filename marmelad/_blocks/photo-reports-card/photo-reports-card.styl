.photo-reports-card
  padding-bottom: 60px

  @media (max-width: 1279px)
    padding-bottom: 30px

  &__wrapper
    max-width: 1055px
    width: 100%
    display: flex
    justify-content: center
    margin-right: auto
    margin-left: auto
    margin-bottom: 50px

    @media (max-width: 959px)
      display: block

  &__preview
    flex: 0 0 500px
    width: 500px
    max-width: 500px

    @media (max-width: 959px)
      width: 100%
      max-width: 100%

  &__container
    padding-right: 20px
    padding-left: 20px
    border-radius: 61px
    padding-bottom: 55px

    @media (max-width: 959px)
      padding-right: 15px
      padding-left: 15px

    @media (max-width: 479px)
      border-radius: 27px

    .swiper-button-prev, .swiper-button-next
      position: absolute
      top: 50%
      transform: translateY(-50%)
      margin-top: -25px
      background-color: #A49777

    .swiper-button-prev
      left: 0

    .swiper-button-next
      right: 0
      transform: translateY(-50%) rotate(180deg)

  &__item
    overflow: hidden
    border-radius: 61px

    @media (max-width: 479px)
      border-radius: 27px

  &__img
    width: 100%

    img
      width: 100%
      height: 100%
      object-fit: cover
      vertical-align: top

  &__info
    padding-left: 100px
    display: flex
    flex-direction: column

    @media (max-width: 1279px)
      padding-left: 50px

    @media (max-width: 1023px)
      padding-left: 25px

    @media (max-width: 959px)
      padding-left: 0

  &__buttons
    display: flex
    align-items: center
    margin-bottom: 35px

    @media (max-width: 959px)
      order: 4
      margin-top: 30px

  &__link-catalog
    font-size: 16px
    color: #FFF
    font-weight: 700
    line-height: 1.1
    text-align: center
    text-decoration: none
    background-color: #A49777
    border-radius: 8px
    width: 185px
    padding: 4px 5px 9px 5px
    margin-right: 30px
    transition: background-color 0.3s, ease 0.3s

    &:hover
      background-color: #FF9B04

  &__play
    font-size: 20px
    color: #A49777
    font-weight: 500
    line-height: 1
    text-decoration: none
    display: flex
    align-items: center
    transition: color 0.3s, ease 0.3s

    &:hover
      color: #DE8C10

    .svg-icon
      flex: 0 0 36px
      width: 36px
      max-width: 36px
      height: 36px
      margin-left: 15px

  &__name
    font-size: 28px
    color: #000
    font-weight: 500
    line-height: 1.1
    margin-bottom: 25px

    @media (max-width: 639px)
      font-size: 22px

  &__address
    font-size: 20px
    color: #797979
    font-weight: 500
    line-height: 1
    display: flex
    align-items: center
    margin-bottom: 30px

    .svg-icon
      fill: #A49777
      margin-right: 15px

  &__info-data
    max-width: 350px
    width: 100%
    display: flex
    justify-content: space-between

    span
      font-size: 20px
      color: #C9C9C9
      font-weight: 500
      line-height: 1.2
      display: block
      margin-bottom: 15px

    strong
      font-size: 18px
      color: #2D2D2D
      font-weight: 700
      line-height: 1
      display: block

  &__review
    display: flex
    max-width: 780px
    width: 100%
    margin-right: auto
    margin-left: auto

    @media (max-width: 639px)
      display: block
      text-align: center

  &__review-name
    font-size: 25px
    color: #000
    font-weight: 500
    line-height: 1.1
    flex: 0 0 140px
    width: 140px
    max-width: 140px

    @media (max-width: 639px)
      width: auto
      max-width: none
      margin-bottom: 25px

  &__review-text
    font-size: 20px
    color: #797979
    font-weight: 500
    line-height: 1.5
