.photo-reports
  &__head
    margin-bottom: 50px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

  &__item
    width: 33.333%
    padding-left: 30px
    margin-bottom: 75px
    display: flex

    @media (max-width: 1279px)
      width: 50%

    @media (max-width: 767px)
      width: 100%

  &__body
    width: 100%
    display: flex
    flex-direction: column
    border: 1px solid #D5D5D5
    min-height: 405px

    @media (max-width: 767px)
      min-height: 305px

  &__img
    padding-right: 25px
    padding-left: 25px
    text-align: center
    margin-bottom: 25px

    @media (max-width: 767px)
      padding-top: 20px
      padding-left: 20px
      margin-bottom: 20px

    img
      vertical-align: top
      margin-top: -25px

      @media (max-width: 767px)
        margin-top: -40px

  &__content
    flex: 1 1 auto
    display: flex
    flex-direction: column

  &__name
    font-size: 20px
    color: #000000
    font-weight: 500
    line-height: 1.1
    text-decoration: none
    padding-right: 25px
    padding-left: 25px
    margin-bottom: 25px
    transition: color 0.3s, ease 0.3s

    @media (max-width: 767px)
      padding-right: 20px
      padding-left: 20px

    &:hover
      color: #de8c10

  &__date
    display: flex
    align-items: center
    justify-content: space-between
    margin-top: auto
    padding-left: 35px

    @media (max-width: 767px)
      padding-left: 20px

    > span
      font-size: 18px
      color: #C1C1C1
      font-weight: 500
      text-align: center
      line-height: 1
      margin-right: 15px

      @media (max-width: 767px)
        font-size: 16px
        margin-right: 5px

  &__link-more
    transform: translate(1px, 1px)

    @media (max-width: 767px)
      min-width: 190px