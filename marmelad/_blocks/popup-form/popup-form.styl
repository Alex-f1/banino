.popup-form
  background-color: #fff

  .contacts-form
    margin-bottom: 0

    &__wrapper
      display: flex
      justify-content: center

    &__head
      margin-bottom: 40px

    &__title
      font-size: 30px
      margin-bottom: 10px

    &__desc
      font-size: 16px

    &__fields
      display: flex
      flex-direction: column
      align-items: center

    &__bottom
      margin-top: 20px

    &__privacy-policy
      margin-left: auto
      margin-right: auto

.popup-status
  &__logo
    margin-bottom: 30px

  &__desc
    font-size: 20px
    color: #7D7D7D
    font-weight: 600
    line-height: 1.4
    text-align: center
    margin-bottom: 30px