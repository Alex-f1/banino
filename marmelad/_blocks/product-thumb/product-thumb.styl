  &__body
    width: 100%
    display: flex
    flex-direction: column
    border: 1px solid #D8D8D8
    border-radius: 19px
    transition: background-color 0.3s, border-color 0.3s, box-shadow 0.3s, ease 0.3s

  &__top
    position: relative
    padding-top: 40px
    margin-bottom: 30px

    @media (max-width: 639px)
      margin-bottom: 20px

  &__img
    width: 220px
    height: 135px
    margin-left: auto
    margin-right: auto
    display: block

    @media (max-width: 639px)
      width: 195px
      height: 120px
      margin-bottom: 15px

  &__tag
    font-size: 14px
    color: #FFF
    font-weight: 600
    line-height: 1
    text-align: center
    width: 52px
    height: 60px
    background-repeat: no-repeat
    background-size: contain
    background-position: 0 0
    position: absolute
    top: -10px
    right: 40px
    padding-top: 15px
    padding-right: 5px
    padding-bottom: 10px
    z-index: 2

  &__bottom
    padding: 0 50px 35px 50px
    flex: 1 1 auto

    @media (max-width: 767px)
      padding-right: 20px
      padding-left: 20px
      padding-bottom: 0

  &__name
    font-size: 29px
    color: #3D3D3D
    font-weight: 700
    line-height: 1.1
    text-align: center
    margin-bottom: 30px

  &__info
    display: flex
    justify-content: space-between
    align-items: flex-end
    width: 100%

  &__size
    display: flex
    flex-direction: column

    span
      font-size: 15px
      color: #C4C4C4
      font-weight: 500
      line-height: 1
      margin-bottom: 5px

    strong
      font-size: 21px
      color: #545454
      font-weight: 700
      line-height: 1

  &__price
    display: flex
    flex-direction: column
    text-align: right

    span
      font-size: 21px
      color: #C4C4C4
      font-weight: 500
      line-height: 1
      text-decoration: line-through
      margin-bottom: 5px

    strong
      font-size: 32px
      color: #A49777
      font-weight: 700
      line-height: 1

  &__link-more
    display: block
    margin-left: auto
    margin-right: auto
    margin-top: 50px
    max-width: 220px

    @media (max-width: 767px)
      transform: translateY(1px)

.banner-thumb
  width: 100%
  min-height: 100%
  display: flex

  @media (max-width: 639px)
    min-height: 365px

  &__body
    width: 100%
    min-height: 100%
    display: flex
    flex-direction: column
    border: 1px solid #D8D8D8
    border-radius: 19px
    background-color: #F1F1F1

  &__content
    text-align: center
    padding-top: 80px

    @media (max-width: 639px)
      padding-top: 40px

  &__name
    font-size: 21px
    color: #3D3D3D
    font-weight: 700
    line-height: 1.1
    text-align: center
    margin-bottom: 5px

  &__price
    display: flex
    flex-direction: column

    strong
      font-size: 41px
      color: #A49777
      font-weight: 700
      line-height: 1
      text-transform: uppercase

      @media (max-width: 639px)
        font-size: 35px

  &__img
    width: 250px
    height: 135px
    margin-left: auto
    margin-right: auto
    display: block

    @media (max-width: 639px)
      width: 195px
      height: 120px
      margin-bottom: 15px