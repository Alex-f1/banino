.s-path
  font-size: 16px
  color: #A49777
  font-weight: 700
  flex: none
  padding-top: 20px
  padding-bottom: 20px
  position: relative
  z-index: 10

  a
    text-decoration: none
    color: #ccc
    transition: color 0.3s, ease 0.3s

    &:hover
      color: #de8c10

  &__separator
    font-size: 16px
    color: #ccc
    font-weight: 700
    flex: none
    line-height: 1
