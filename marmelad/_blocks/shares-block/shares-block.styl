.shares-block
  padding-bottom: 60px

  @media (max-width: 1279px)
    padding-top: 30px

  &--type2
    padding-top: 60px

    @media (max-width: 1279px)
      padding-top: 30px

    & ^[0]
      &__items
        display: flex
        margin-left: -20px

        @media (max-width: 767px)
          display: block

      &__item
        width: 50%
        padding-left: 20px

        @media (max-width: 767px)
          width: 100%
          margin-bottom: 35px

        .share-thumb
          &__content
            max-width: 100%

        &:last-child
          margin-bottom: 0