.steps-work
  padding-top: 60px
  padding-bottom: 60px

  @media (max-width: 1279px)
    padding-top: 30px
    padding-bottom: 30px

  &__head
    display: flex
    align-items: center

    @media (max-width: 1279px)
      text-align: center
      justify-content: center

    &:after
      content: ''
      flex: 1 1 auto
      height: 1px
      background-color: #A49777
      margin-top: 10px
      margin-left: 35px

      @media (max-width: 1279px)
        display: none

  &__title
    font-size: 44px
    color: #CDCDCD
    font-weight: 700
    line-height: 1.1

    @media (max-width: 767px)
      font-size: 30px

  &__container
    .swiper-button-prev, .swiper-button-next
      position: absolute
      top: 50%
      transform: translateY(-50%)
      background-color: transparent
      background-image: url("data:image/svg+xml,%3Csvg width='11' height='20' viewBox='0 0 11 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10 19L2 10L10 1' stroke='%23A49777' stroke-width='2'/%3E%3C/svg%3E%0A")
      background-size: 11px 20px

      @media (min-width: 768px)
        display: none

    .swiper-button-prev
      left: -15px

    .swiper-button-next
      transform: translateY(-50%) rotate(180deg)
      right: -15px

  &__items
    display: flex
    align-items: center

  &__item
    width: 20%
    min-height: 270px

    @media (max-width: 767px)
      position: relative
      min-height: 200px

    &._is-steps-work-item, &.swiper-slide-active
      & ^[0]
        &__num
          transform: scale(1) translateY(0)
          color: #a49777

          &:after
            display: block

        &__name
          color: #a49777

          @media (max-width: 767px)
            opacity: 1

        &__text
          opacity: 1
          visibility: visible
          display: block

  &__body
    text-align: center
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    height: 100%

  &__num
    font-size: 158px
    color: #DBDBDB
    font-weight: 700
    line-height: 1
    padding-bottom: 35px
    transition: transform 0.3s, ease 0.3s
    position: relative
    transform: scale(0.5) translateY(65px)

    @media (max-width: 767px)
      font-size: 82px

    &:after
      content: ''
      position: absolute
      bottom: 0
      left: 50%
      width: 25px
      height: 15px
      background-image: url("data:image/svg+xml,%3Csvg width='25' height='15' viewBox='0 0 25 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11.062 13.5124L1.27704 3.39005C0.0499715 2.12066 0.949506 1.77842e-06 2.71502 1.70125e-06L22.285 8.45818e-07C24.0505 7.68645e-07 24.95 2.12066 23.723 3.39004L13.938 13.5124C13.1518 14.3257 11.8482 14.3257 11.062 13.5124Z' fill='%23A49777'/%3E%3C/svg%3E%0A")
      transform: translateX(-50%)
      display: none

  &__name
    font-size: 22px
    color: #B4B4B4
    font-weight: 800
    line-height: 1
    margin-bottom: 15px
    transition: color 0.3s, ease 0.3s

    @media (max-width: 767px)
      opacity: 0

  &__text
    font-size: 18px
    color: #818181
    font-weight: 500
    line-height: 1.2
    opacity: 0
    visibility: hidden
    transition: opacity 0.3s, ease 0.3s

    @media (max-width: 767px)
      width: 210px
      position: absolute
      bottom: 0
      left: 50%
      transform: translateX(-50%)